# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/library_management
MONGODB_TEST_URI=mongodb://localhost:27017/library_management_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=noreply@librarymanagement.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Fine Configuration
FINE_PER_DAY=1.00
MAX_FINE_AMOUNT=50.00
BORROW_DURATION_DAYS=14
RENEWAL_DURATION_DAYS=7
MAX_RENEWALS=2

# Frontend URL
CLIENT_URL=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@librarymanagement.com
ADMIN_PASSWORD=admin123

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# API Documentation
API_DOCS_URL=/api-docs
